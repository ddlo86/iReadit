<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/commentSelfText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        
        android:layout_below="@+id/linearLayoutComments"
        android:autoLink="web"
        android:paddingTop="3dp"
        android:text="wall_of_text here"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/linearLayoutComments">

        <TextView
            android:id="@+id/commentScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="thisistext"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/commentUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:text="text_user"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/commentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="text_time"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/AndroidWork/IReadIt/IReadit/res/layout/comments_list_adapter.xml -->