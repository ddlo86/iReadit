<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.gmcl.Bo.Fragments">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="225dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="225dp"
            app:layout_collapseMode="parallax"
            android:scaleType="centerCrop"
            android:src="@drawable/homepage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#CCFFFFFF"
            android:layout_gravity="center_horizontal|bottom"
            android:text="Toronto  to  Ontario"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:id="@+id/tvRoute"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:textColorHighlight="#ffffff"
            android:textSize="24dp"
            android:textIsSelectable="false"
            android:paddingTop="12dp"
            android:gravity="center"/>
    </FrameLayout>



    <ScrollView
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Load Summary"

                android:id="@+id/current_load_summary"
                android:textSize="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Load ID: "

                android:paddingLeft="24dp"
                android:textColor="#0000FF"
                android:id="@+id/tvDescLoadID"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/current_load_summary"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="000001"
                android:id="@+id/tvLoadID"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/tvDescLoadID"
                android:layout_toEndOf="@+id/tvDescLoadID"
                android:layout_below="@+id/current_load_summary"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="4:50"
                android:id="@+id/tvETA"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/tvDescETA"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/current_load_summary"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETA: "
                android:textSize="16dp"
                android:paddingLeft="24dp"
                android:textColor="#0000FF"

                android:id="@+id/tvDescETA"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/tvLoadID"
                android:layout_toEndOf="@+id/tvLoadID"
                android:layout_below="@+id/current_load_summary"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tvPickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Location"
            android:paddingLeft="12dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvPickCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malhi Inc."
            android:textColor="#000000"
            android:paddingLeft="12dp"
            android:paddingTop="1dp" />

        <TextView
            android:id="@+id/tvPickAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="425 Cromwell Ave."
            android:textColor="#000000"
            android:paddingLeft="12dp" />

        <TextView
            android:id="@+id/tvPickCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vancouver, British Columbia, Canada, V3B 7G7"
            android:textColor="#000000"
            android:paddingLeft="12dp" />

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination Location"
            android:paddingLeft="12dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvDestCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marizaki Inc."
            android:textColor="#000000"
            android:paddingLeft="12dp"
            android:paddingTop="1dp" />

        <TextView
            android:id="@+id/tvDestAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Harbord St."
            android:textColor="#000000"
            android:paddingLeft="12dp" />

        <TextView
            android:id="@+id/tvDestCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toronto, Ontario, Canada, m521g2"
            android:textColor="#000000"
            android:paddingLeft="12dp" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>